<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.mariasales.leagueoflegendsapp.TeamViewerActivity"
    android:id="@+id/background_layout"
    android:background="#000000">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Team"
        android:id="@+id/your_team_text"
        android:textColor="#FFFFFF"
        android:layout_marginLeft="36dp"
        android:layout_marginStart="36dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:id="@+id/ally_1"
        android:src="@drawable/addicon"
        android:layout_marginTop="34dp"
        android:layout_below="@+id/your_team_text"
        android:layout_alignRight="@+id/your_team_text"
        android:layout_alignEnd="@+id/your_team_text" />

    <ImageView
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:id="@+id/ally_2"
        android:src="@drawable/addicon"
        android:layout_above="@+id/enemy_3"
        android:layout_alignLeft="@+id/ally_1"
        android:layout_alignStart="@+id/ally_1" />

    <ImageView
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:id="@+id/ally_3"
        android:src="@drawable/addicon"
        android:layout_below="@+id/ally_2"
        android:layout_alignLeft="@+id/ally_2"
        android:layout_alignStart="@+id/ally_2" />

    <ImageView
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:id="@+id/ally_4"
        android:src="@drawable/addicon"
        android:layout_below="@+id/ally_3"
        android:layout_alignLeft="@+id/ally_3"
        android:layout_alignStart="@+id/ally_3" />

    <ImageView
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:id="@+id/ally_5"
        android:src="@drawable/addicon"
        android:layout_below="@+id/ally_4"
        android:layout_alignLeft="@+id/ally_4"
        android:layout_alignStart="@+id/ally_4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enemy Team"
        android:id="@+id/enemy_team_text"
        android:textColor="#FFFFFF"
        android:layout_marginRight="36dp"
        android:layout_marginEnd="36dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


    <ImageView
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:id="@+id/enemy_1"
        android:src="@drawable/addicon"
        android:layout_alignTop="@+id/ally_1"
        android:layout_alignRight="@+id/enemy_team_text"
        android:layout_alignEnd="@+id/enemy_team_text" />

    <ImageView
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:id="@+id/enemy_2"
        android:src="@drawable/addicon"
        android:layout_below="@+id/enemy_1"
        android:layout_alignLeft="@+id/enemy_1"
        android:layout_alignStart="@+id/enemy_1" />

    <ImageView
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:id="@+id/enemy_3"
        android:src="@drawable/addicon"
        android:layout_below="@+id/enemy_2"
        android:layout_alignRight="@+id/enemy_2"
        android:layout_alignEnd="@+id/enemy_2" />

    <ImageView
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:id="@+id/enemy_4"
        android:src="@drawable/addicon"
        android:layout_alignTop="@+id/ally_4"
        android:layout_alignRight="@+id/enemy_3"
        android:layout_alignEnd="@+id/enemy_3" />

    <ImageView
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:id="@+id/enemy_5"
        android:src="@drawable/addicon"
        android:layout_alignTop="@+id/ally_5"
        android:layout_alignLeft="@+id/enemy_4"
        android:layout_alignStart="@+id/enemy_4" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset"
        android:id="@+id/reset_button"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/your_team_text"
        android:layout_alignStart="@+id/your_team_text"
        android:layout_alignRight="@+id/enemy_5"
        android:layout_alignEnd="@+id/enemy_5" />

</RelativeLayout>
